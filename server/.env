# MongoDB Connection String (local)
MONGO_URI=mongodb://127.0.0.1:27017/realestateapp
# JSON Web Token Secret (use a secure random string for production)
JWT_SECRET=mySuperSecretKey@123
# Cloudinary API Credentials (for image uploads)
CLOUDINARY_CLOUD_NAME=xyzname
CLOUDINARY_API_KEY=apikey
CLOUDINARY_API_SECRET=xxxxxxxx
# Client URL (for CORS or email links)
CLIENT_URL=http://localhost:3000
# Server Port
PORT=5000
# Email Service Credentials (for NodeMailer - using Mailtrap for testing)
MAIL_USER=api
MAIL_PASS=xxxxxxx
# Mailtrap Specific (Optional - can be hardcoded in mailer.js if preferred)
MAILTRAP_HOST=live.smtp.mailtrap.io
MAILTRAP_PORT=587
# Node Environment
NODE_ENV=development
